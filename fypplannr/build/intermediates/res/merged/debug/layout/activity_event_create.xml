<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parse.fypPlannr.eventCreateActivity"
    android:background="#24B14D">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:id="@+id/eventNameEditText"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="Event Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/eventNameEditText"
        android:id="@+id/eventDescriptionEditText"
        android:layout_alignRight="@+id/eventNameEditText"
        android:layout_alignEnd="@+id/eventNameEditText"
        android:textColor="#ffffff"
        android:textColorHighlight="#ffffff"
        android:hint="Description"
        android:textColorHint="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_below="@+id/addressEditText"
        android:layout_alignRight="@+id/addressEditText"
        android:layout_alignEnd="@+id/addressEditText"
        android:id="@+id/dateEditText"
        android:textColor="#ffffff"
        android:hint="01/05/17"
        android:textColorHint="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:layout_below="@+id/dateEditText"
        android:layout_alignRight="@+id/dateEditText"
        android:layout_alignEnd="@+id/dateEditText"
        android:id="@+id/timeEditText"
        android:textColor="#ffffff"
        android:hint="00:00"
        android:textColorHint="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/addressEditText"
        android:layout_below="@+id/eventDescriptionEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="Address" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel"
        android:onClick="cancelPressed"
        android:background="#029789"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/eventCreate"
        android:layout_alignBottom="@+id/eventCreate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="66dp"
        android:layout_marginEnd="66dp" />

    <Button
        android:text="Create Event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="53dp"
        android:id="@+id/eventCreate"
        android:onClick="createEvent"
        android:background="#04988a"
        android:textColor="#ffffff"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/cancel"
        android:layout_toStartOf="@+id/cancel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/timeEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cityEditText"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="City" />

    <CheckBox
        android:text="Private event (friends only)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBox"
        android:textColor="#ffffff" />

</RelativeLayout>
